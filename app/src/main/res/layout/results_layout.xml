<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"

                                             android:layout_height="match_parent"
                                             android:background="@android:color/holo_blue_bright">


    <LinearLayout
            android:layout_width="341dp"
            android:layout_height="460dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout4"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.49"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.51">
        <LinearLayout
                android:layout_width="wrap_content" android:layout_height="414dp"
                android:orientation="vertical">
            <TextView
                    android:text="ANDROID"
                    android:layout_width="130dp"
                    android:layout_height="60dp"
                    tools:layout_editor_absoluteY="197dp"
                    tools:layout_editor_absoluteX="8dp" android:id="@+id/reslabl1_id" android:layout_marginTop="70dp"
                    android:textColor="@android:color/holo_red_light" android:textSize="24sp"
                    android:paddingTop="10dp"/>
            <TextView
                    android:text="JAVA"
                    android:layout_width="130dp"
                    android:layout_height="60dp" tools:layout_editor_absoluteY="261dp"
                    tools:layout_editor_absoluteX="8dp" android:id="@+id/reslabl2_id" android:paddingBottom="10dp"
                    android:textColor="@color/colorAccent" android:textSize="24sp" android:paddingTop="10dp"
                    android:textAlignment="viewStart"/>
            <TextView
                    android:text="KOTLIN"
                    android:layout_width="130dp"
                    android:layout_height="60dp" tools:layout_editor_absoluteY="332dp"
                    tools:layout_editor_absoluteX="8dp" android:id="@+id/reslabl3_id"
                    android:textColor="@color/colorAccent" android:textSize="24sp" android:paddingTop="10dp"
                    android:textAlignment="viewStart"/>
            <TextView
                    android:text="XML"
                    android:layout_width="130dp"
                    android:layout_height="60dp" tools:layout_editor_absoluteY="400dp"
                    tools:layout_editor_absoluteX="16dp" android:id="@+id/reslabl4_id"
                    android:layout_marginBottom="40dp" android:textColor="@color/colorAccent" android:textSize="24sp"
                    android:paddingTop="10dp" android:textAlignment="viewStart"/>
            <TextView android:layout_width="130dp"
                      android:layout_height="60dp"
                      android:id="@+id/find_id"
                      android:textSize="18sp" android:textColor="@android:color/holo_purple" android:paddingTop="10dp"
                      android:text="HI" android:textAlignment="center"
                      android:background="@android:color/holo_green_light"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="206dp"
                android:layout_height="415dp"
                android:orientation="vertical" android:paddingTop="10dp">
            <TextView
                    android:layout_width="101dp"
                    android:layout_height="60dp"
                    android:ems="10"
                    tools:layout_editor_absoluteX="134dp" android:id="@+id/resgrad1_id"
                    android:layout_marginTop="48dp"
                    app:layout_constraintTop_toBottomOf="@+id/autocomplete_id" android:paddingTop="30dp"
                    android:textColor="@color/background" android:text="grade1" android:inputType="text"
                    android:textAlignment="viewEnd" android:textSize="24sp"/>
            <TextView
                    android:layout_width="101dp"
                    android:layout_height="60dp"
                    android:text="grade2"
                    android:ems="10"
                    tools:layout_editor_absoluteY="254dp" tools:layout_editor_absoluteX="134dp"
                    android:id="@+id/resgrad2_id"
                    android:inputType="text" android:textColor="@color/background" android:paddingTop="30dp"
                    android:textAlignment="viewEnd" android:textSize="24sp"/>
            <TextView
                    android:layout_width="101dp"
                    android:layout_height="60dp"
                    android:text="grade3"
                    android:ems="10"
                    tools:layout_editor_absoluteY="332dp" tools:layout_editor_absoluteX="134dp"
                    android:id="@+id/resgrad3_id"
                    android:textColor="@color/background" android:inputType="text" android:paddingTop="30dp"
                    android:textAlignment="viewEnd" android:textSize="24sp"/>
            <TextView
                    android:layout_width="101dp"
                    android:layout_height="60dp"
                    android:text="grade4"
                    android:ems="10"
                    tools:layout_editor_absoluteY="397dp" tools:layout_editor_absoluteX="138dp"
                    android:id="@+id/resgrad4_id"
                    android:inputType="text" android:textColor="@color/background" android:paddingTop="30dp"
                    android:textAlignment="viewEnd" android:textSize="24sp"/>

            <EditText android:layout_width="100dp"
                      android:layout_height="127dp"
                      android:id="@+id/score_id" android:textSize="18sp" android:textColor="@color/colorAccent"
                      android:paddingTop="60dp" android:textAlignment="viewEnd"
                      android:inputType="number" android:numeric="integer"/>
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>