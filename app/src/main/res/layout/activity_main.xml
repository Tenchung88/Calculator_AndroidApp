<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity" android:background="@android:color/holo_purple">

    <AutoCompleteTextView
            android:text="Enter the text"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:id="@+id/autocomplete_id" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
            app:layout_constraintVertical_bias="0.189" android:background="@android:color/holo_orange_light"
            android:popupBackground="@android:color/holo_green_light" android:completionHint="E"/>


<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
android:orientation="vertical">
    <TextView
            android:layout_width="181dp"
            android:layout_height="22dp"
            android:id="@+id/labl1_id" android:text="Android"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" android:fontFamily="sans-serif"
            android:typeface="sans" android:textSize="18sp" android:textColor="@android:color/holo_blue_dark"/>
    <EditText
            android:layout_width="198dp"
            android:layout_height="40dp"
            android:ems="10"
            android:id="@+id/grad1_id"
            android:inputType="number" android:hint="grade1" android:textAlignment="viewEnd"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/labl1_id" android:singleLine="true"
            android:selectAllOnFocus="true" app:layout_constraintHorizontal_bias="0.0" android:numeric="integer"
            android:textColor="@android:color/background_dark"/>
    <TextView
            android:text="Java"
            android:layout_width="177dp"
            android:layout_height="24dp"
            android:id="@+id/labl2_id" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/grad1_id" app:layout_constraintHorizontal_bias="0.0"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" android:fontFamily="sans-serif"
            android:typeface="sans" android:textSize="18sp" android:textColor="@android:color/holo_blue_dark"/>
    <EditText
            android:layout_width="196dp"
            android:layout_height="40dp"
            android:ems="10"
            android:id="@+id/grad2_id"
            android:inputType="number" android:hint="grade2" android:textAlignment="viewEnd"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/labl2_id" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/labl3_id" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.368" android:numeric="integer"
            android:textColor="@android:color/background_dark"/>
    <TextView
            android:text="Kotlin"
            android:layout_width="173dp"
            android:layout_height="31dp"
            android:id="@+id/labl3_id" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/grad3_id" app:layout_constraintHorizontal_bias="0.01"
            android:layout_marginBottom="24dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" android:fontFamily="sans-serif"
            android:typeface="sans" android:textSize="18sp" android:textColor="@android:color/holo_blue_dark"/>
    <EditText
            android:layout_width="198dp"
            android:layout_height="41dp"
            android:ems="10"
            android:id="@+id/grad3_id"
            android:inputType="number" android:hint="grade3" android:textAlignment="viewEnd"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/labl4_id" android:singleLine="true"
            android:selectAllOnFocus="true" app:layout_constraintHorizontal_bias="0.0" android:numeric="integer"
            android:textColor="@android:color/background_dark"/>
    <TextView
            android:text="XML"
            android:layout_width="175dp"
            android:layout_height="26dp"
            android:id="@+id/labl4_id" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/grad4_id" app:layout_constraintHorizontal_bias="0.041"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" android:fontFamily="sans-serif"
            android:typeface="sans" android:textSize="18sp" android:textColor="@android:color/holo_blue_dark"/>


    <EditText
            android:layout_width="207dp"
            android:layout_height="40dp"
            android:ems="10"
            android:id="@+id/grad4_id"
            android:inputType="number" android:hint="grade4" android:textAlignment="viewEnd"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/calcu_id" app:layout_constraintHorizontal_bias="0.0"
            android:numeric="integer" android:textColor="@android:color/background_dark"/>
</LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="368dp"
            android:layout_height="55dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/linearLayout3">
        <Button
                android:text="MIN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/butMin_id" android:layout_weight="1"
                android:textAlignment="viewStart"/>
        <Button
                android:text="@string/avgsir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/butavg_id" android:layout_weight="3"
                android:textAlignment="center"/>
        <Button
                android:text="MAX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/butmax_id" android:layout_weight="1"
                android:textAlignment="viewEnd"/>
    </LinearLayout>

</LinearLayout>